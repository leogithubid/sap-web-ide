<mvc:XMLView xmlns:mvc="sap.ui.core.mvc"
          xmlns="sap.m"
          xmlns:core="sap.ui.core"
          xmlns:form="sap.ui.layout.form"
          xmlns:table="sap.ui.table"
          controllerName="home.controller.main">
        <table:Table rows="{/empTab}" visibleRowCount="4">
            <table:title>
                <Title text="{i18n>XTIT_TABLE}"></Title>
            </table:title>
            <table:columns>
                <table:Column >
                    <table:label>
                        <Label text="{i18n>XLBL_EMPID}"></Label>
                    </table:label>
                    <table:template>
                        <Text text="{empId}" ></Text>
                    </table:template>
                </table:Column>
                <table:Column >
                    <table:label>
                        <Label text="{i18n>XLBL_EMPNAME}"></Label>
                    </table:label>
                    <table:template>
                        <Input value="{empName}"></Input>
                    </table:template>
                </table:Column>
                <table:Column >
                    <table:label>
                        <Label text="{i18n>XLBL_SALARY}"></Label>
                    </table:label>
                    <table:template>
                        <Input value="{salary} {currency}"></Input>
                    </table:template>
                </table:Column>
                <table:Column >
                    <table:label>
                        <Label text="{i18n>XLBL_SMOKER}"></Label>
                    </table:label>
                    <table:template>
                        <CheckBox selected="{smoker}"></CheckBox>
                    </table:template>
                </table:Column>
                <table:Column >
                    <table:label>
                        <Label text="{i18n>XLBL_MARITALSTATUS}"></Label>
                    </table:label>
                    <table:template>
                        <Select selectedKey="{maritalStatus}">
                            <items>
                                <core:Item key="m" text="married"></core:Item>
                                <core:Item key="s" text="single"></core:Item>
                            </items>
                        </Select>
                    </table:template>
                </table:Column>
                <table:Column >
                    <table:label>
                        <Label text="{i18n>XLBL_RATING}"></Label>
                    </table:label>
                    <table:template>
                        <RatingIndicator value="{rating}"></RatingIndicator>
                    </table:template>
                </table:Column>
            </table:columns>
        </table:Table>
        <form:SimpleForm editable="true">
            <form:title>
                <core:Title text="{i18n>XTIT_FORM}">
                </core:Title>
            </form:title>
            <Label text="{i18n>XLBL_EMPID}"></Label>
            <Input value=""></Input>
            <Label text="{i18n>XLBL_EMPNAME}"></Label>
            <Input value=""></Input>
             <Label text="{i18n>XLBL_SALARY}"></Label>
            <Input value=""></Input>
            <Label text="{i18n>XLBL_SMOKER}"></Label>
            <Input value=""></Input>
            <Label text="{i18n>XLBL_MARITALSTATUS}"></Label>
            <Input value=""></Input>
            <Label text="{i18n>XLBL_RATING}"></Label>
            <Input value=""></Input>
        </form:SimpleForm>
</mvc:XMLView>